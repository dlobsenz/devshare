{
  "name": "@devshare/daemon",
  "version": "0.1.0",
  "description": "DevShare daemon service",
  "main": "dist/main.js",
  "bin": {
    "devshare-daemon": "dist/main.js"
  },
  "scripts": {
    "build": "esbuild src/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --external:@devshare/native --external:better-sqlite3 --external:ws",
    "dev": "esbuild src/main.ts --bundle --platform=node --target=node18 --outfile=dist/main.js --external:@devshare/native --external:better-sqlite3 --external:ws --watch",
    "start": "node dist/main.js",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "test": "vitest"
  },
  "dependencies": {
    "@devshare/proto": "workspace:*",
    "@devshare/native": "workspace:*",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "chokidar": "^3.5.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/ws": "^8.5.10",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist"
  ]
}
